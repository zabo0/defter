<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Defter" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryLightColor</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->



        <item name="background">@color/A5</item>
        <item name="colorOnBackground">@color/A10</item>
        <item name="colorSurface">@color/A6</item>
        <item name="colorOnSurface">@color/A11</item>
        <item name="colorOnSurfaceVariant">@color/white</item>
        <item name="colorError">@color/A7</item>
        <item name="colorOnError">@color/A12</item>

    </style>
</resources>